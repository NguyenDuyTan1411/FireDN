@model FireDN.Data.NguoiDung

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fire_Alarm_IOT</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <style>
        .bg-light-green {
            background-color: #d5f5e3; 
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-light bg-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#" class="nav-link" data-widget="pushmenu" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item">
                    @if (Model != null)
                    {
                        <a asp-controller="Home" asp-action="Index" class="nav-link">@Model.Username</a>
                    }
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Login" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <p class="d-none d-md-inline-block ml-1">Logout</p>
                    </a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-light-primary elevation-4">
            <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">Sensor Dashboard</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a asp-controller="Temperature" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-thermometer-half"></i>
                                <p>Temperature</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Humidity" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tint"></i>
                                <p>Humidity</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Fire" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-fire"></i>
                                <p>Fire</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Smoke" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-smog"></i>
                                <p>Smoke</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="AllSensors" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-list-ul"></i>
                                <p>All Sensors</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper bg-light-green">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Dashboard</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
                                <li class="breadcrumb-item active">Dashboard</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-light"></aside>
        <footer class="main-footer bg-light">
            <strong>Sensor Dashboard &copy; 2024</strong>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
